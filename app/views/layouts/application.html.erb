<!DOCTYPE html>
<html>
  <head>
    <title>Breakheart</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <%= link_to "Breakheart Forum", root_path, class: "navbar-brand" %>
        
        </div>

        <ul class="navbar-nav nav navbar-right">
          <% if utilisateur_signed_in? %>
            <li><%= link_to "Deconnexion", destroy_utilisateur_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Connexion", new_utilisateur_session_path %></li>
            <li><%= link_to "Enregistrer", new_utilisateur_registration_path %></li>
          <% end %>
        </ul>
        
         <% if utilisateur_signed_in? %>
          <p><%= link_to "New Story", new_message_path, class: "navbar-text navbar-link" %></p>
          <% end %>
        </div>
      </nav>
    
      
      <div class="container">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, class: "alert alert-info" %>
        <% end %>
      </div>
  	   

       <div class="container">
         <%= yield %>
       </div>
    
  </body>
</html>
